/// Global system settings
model SystemSetting {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key         String   @unique
  value       String
  description String?
  category    String
  is_public   Boolean  @default(false)  // Whether setting is visible to non-admins
